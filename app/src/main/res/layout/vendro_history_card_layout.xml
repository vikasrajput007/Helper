<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/history_cardView_hieght"
    android:layout_marginTop="5dp"
    android:background="#acacaa">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_history"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/app_white_color"
        app:cardCornerRadius="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="6dp"
            android:paddingTop="6dp">

            <ImageView
                android:id="@+id/vendor_image"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toStartOf="@+id/vendor_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/ic_launcher"/>

            <TextView
                android:id="@+id/vendor_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="5dp"
                android:text="Ashok Singla"
                android:textColor="#000"
                android:textSize="@dimen/history_vendorname_size"
                app:layout_constraintBottom_toTopOf="@+id/vendor_contatct_no"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/vendor_image"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/vendor_contatct_no"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="5dp"
                android:text="9896556656"
                android:textSize="@dimen/history_vendorAlltext_size"
                app:layout_constraintBottom_toTopOf="@+id/vendor_address"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/vendor_image"
                app:layout_constraintTop_toBottomOf="@+id/vendor_name"/>

            <TextView
                android:id="@+id/vendor_address"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="5dp"
                android:text="Street no.6, Preet Colony, Zirakpur "
                android:textSize="@dimen/history_vendorAlltext_size"
                app:layout_constraintBottom_toTopOf="@+id/vendor_payment_status"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/vendor_image"
                app:layout_constraintTop_toBottomOf="@+id/vendor_contatct_no"/>

            <TextView
                android:id="@+id/vendor_payment_status"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="5dp"
                android:text="Total Paid Amount : Rs500"
                android:textSize="@dimen/history_vendorAlltext_size"
                app:layout_constraintBottom_toTopOf="@+id/vendor_service_time"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/vendor_image"
                app:layout_constraintTop_toBottomOf="@+id/vendor_address"/>

            <TextView
                android:id="@+id/vendor_service_time"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="5dp"
                android:text="2 weeks ago"
                android:textSize="@dimen/history_vendorAlltext_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/vendor_image"
                app:layout_constraintTop_toBottomOf="@+id/vendor_payment_status"/>

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>