<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vendor_service"
    android:layout_width="@dimen/all_service_parent_width_height"
    android:layout_height="@dimen/all_service_parent_width_height"
    android:background="#fff"
    android:gravity="center"
    android:clickable="true"
    android:layout_marginBottom="@dimen/all_service_recycler_margin_bottom"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/all_service_icon"
        android:layout_width="@dimen/all_service_list_item_width_height"
        android:layout_height="@dimen/all_service_list_item_width_height"
        android:contentDescription="@string/todo"
        android:scaleType="fitCenter"
        android:src="@drawable/custom_notification"
        />

    <TextView
        android:id="@+id/all_service_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/electrician"
        android:textColor="@color/text_color"
        android:textSize="@dimen/all_service_list_item_text_size"
        />


</LinearLayout>