<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    style="@android:style/Theme.Dialog"
    android:layout_height="match_parent" >
    <FrameLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         >

<RelativeLayout
    android:layout_margin="15dp"
android:layout_width="match_parent"
android:orientation="vertical"
android:background="@drawable/pic_image_boundary"
android:layout_height="190dp">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_below="@+id/header_popup"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="20dp"
        android:text="Choose from gallery"
        android:layout_margin="5dp"
        android:textColor="@color/header_color"
        android:drawablePadding="20dp"
        android:background="@drawable/custominputbox"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/img_logo"
        android:id="@+id/img_gallery"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="20dp"
        android:drawablePadding="20dp"
        android:text="Take photo"
        android:background="@drawable/custominputbox"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/camera_icon"
        android:layout_margin="5dp"
        android:textColor="@color/header_color"
        android:id="@+id/img_camera"
        />

</LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Upload Picture"
        android:textSize="14dp"
        android:id="@+id/header_popup"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:background="@color/header_color"
        android:textAllCaps="false"
        android:paddingLeft="20dp"
        android:paddingRight="50dp"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
        <ImageView
            android:id="@+id/close_thank_you"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right|top"
            android:src="@drawable/close_icon" />
    </FrameLayout>

</FrameLayout>

