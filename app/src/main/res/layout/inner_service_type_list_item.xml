<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/inner_service_item_listener"
    android:layout_width="wrap_content"
    android:layout_marginRight="8dp"
    android:clickable="true"
    android:focusable="true"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/constraintLayout12"
        android:layout_width="match_parent"
        android:layout_height="@dimen/inner_service_item_height"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/inner_service_type_image"
            android:layout_width="@dimen/inner_service_type_image_width"
            android:layout_height="@dimen/inner_service_type_image_height"
            android:layout_marginBottom="8dp"
            android:scaleType="fitXY"
            android:contentDescription="@string/todo"
            android:src="@drawable/custom_notification"/>

        <TextView
            android:id="@+id/inner_service_type_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/electrician"
            android:textColor="@color/text_color"
            android:textSize="@dimen/service_text_size"/>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>